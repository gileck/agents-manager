{
  "name": "electron-macos-template",
  "version": "1.0.0",
  "description": "Production-ready Electron template for macOS menu bar apps",
  "main": "bootstrap.js",
  "bin": {
    "am": "./dist-cli/src/cli/index.js"
  },
  "scripts": {
    "clean": "rm -rf dist dist-main dist-cli",
    "build": "npm run clean && npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p config/tsconfig.main.json",
    "build:preload": "tsc -p config/tsconfig.preload.json",
    "build:renderer": "webpack --config config/webpack.renderer.config.js",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3",
    "rebuild:node": "npm rebuild better-sqlite3",
    "prestart": "pkill -f 'Agents Manager' 2>/dev/null || true; pkill -f 'electron .' 2>/dev/null || true; pkill -f Electron 2>/dev/null || true",
    "start": "npm run rebuild:electron && npm run build && electron .",
    "start:devtools": "npm run rebuild:electron && npm run build && ELECTRON_DEBUG=1 electron .",
    "electron": "electron .",
    "electron:debug": "ELECTRON_DEBUG=1 electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p config/tsconfig.main.json --watch",
    "dev:preload": "tsc -p config/tsconfig.preload.json --watch",
    "dev:renderer": "webpack --config config/webpack.renderer.config.js --watch",
    "pack": "npm run rebuild:electron && npm run build && electron-builder --dir",
    "dist": "npm run rebuild:electron && npm run build && electron-builder",
    "deploy": "./scripts/deploy.sh",
    "build:cli": "tsc -p config/tsconfig.cli.json",
    "test": "npm run rebuild:node && vitest run",
    "test:watch": "npm run rebuild:node && vitest",
    "test:coverage": "npm run rebuild:node && vitest run --coverage",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "macos",
    "template",
    "menu-bar-app"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.42",
    "better-sqlite3": "^11.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^14.0.3",
    "cron-parser": "^4.9.0",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.469.0",
    "node-cron": "^3.0.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^6.28.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^10.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^28.3.3",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.5",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.agents-manager.app",
    "productName": "Agents Manager",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dir",
      "icon": "assets/icon.icns"
    },
    "files": [
      "bootstrap.js",
      "dist-main/**/*",
      "dist/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/better-sqlite3/build/Release/better_sqlite3.node",
        "to": "better_sqlite3.node"
      }
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*"
    ]
  }
}
